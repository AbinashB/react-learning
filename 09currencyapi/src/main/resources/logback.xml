<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with colored output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for persistent logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/currency-api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/currency-api-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{instance}] [%X{method} %X{path}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Request/Response logger with detailed output -->
    <logger name="RequestResponseLogger" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Application loggers -->
    <logger name="org.example" level="DEBUG"/>
    
    <!-- Ktor framework loggers -->
    <logger name="io.ktor.application" level="INFO"/>
    <logger name="io.ktor.routing" level="INFO"/>
    <logger name="io.ktor.server.engine" level="INFO"/>
    
    <!-- Reduce noise from Netty -->
    <logger name="io.netty" level="WARN"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
